<div class="center-text">
  <h2>Explore Recent Images</h2>
</div>

<div class="grid">
  {{#each recentImages}}
    <div class="grid-item">
      <div class="grid-content">
        <img class="image" src={{this.imageURL}} alt="Default placeholder image" onerror="imgError(this);">
        <button class="btn btn-default view-more-btn">View More from Poster</button>
      </div>
    </div>
  {{/each}}
</div>