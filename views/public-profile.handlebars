<link rel="stylesheet" href="/css/public-profile.css">

<div class="container">
  <h1>{{user.username}}'s profile</h1>
</div>

<div class="center-text">
  <h2>{{user.username}}'s' Uploaded Images</h2>
</div>

<div class="grid">
{{#each user.images}}
  <div class="grid-item" id={{this.imageId}}>
    <div class="grid-content">
      <img class="image" src={{this.imageURL}} alt="Default placeholder image" onerror="imgError(this);">
    </div>
  </div>
{{/each}}
</div>